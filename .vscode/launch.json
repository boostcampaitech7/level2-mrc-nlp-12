    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run src.train",
            "type": "debugpy",
            "request": "launch",
            "module": "src.train",  // Using `python -m src.train`
            "args": ["--config", "../config.json"],  // Passing the arguments to the script
            "console": "integratedTerminal",  // Ensures output goes to the integrated terminal
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Makes sure your project folder is in the path
            },
            "cwd": "${workspaceFolder}/src",  // Set the working directory to the "src" folder
            "justMyCode": true
        }
    ]
}